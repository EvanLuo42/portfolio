---
import {
  Card,
  CardContent,
  CardDescription,
  CardFooter,
  CardHeader,
  CardTitle
} from "./ui/card";

const { md, gameName } = Astro.props

const games = await Astro.glob("../contents/games/*.md")
const Content = games
  .find((x) => {
      const paths = x.file.split('/')
      return paths[paths.length - 1] === md
  })!
  .Content
---

<div class="col-span-1 row-span-1">
    <Card className="hover:cursor-pointer hover:border-primary relative overflow-clip">
        <CardContent className="p-0">
            <img class="w-full h-1/3" src="https://s2.loli.net/2024/05/24/zWIlyZmQkacx3vS.png">
            <div class="m-4 space-y-1">
                <h3 class="font-bold text-xl">{gameName}</h3>
                <div class="text-justify hyphens-auto">
                    <Content/>
                </div>
            </div>
        </CardContent>
    </Card>
</div>